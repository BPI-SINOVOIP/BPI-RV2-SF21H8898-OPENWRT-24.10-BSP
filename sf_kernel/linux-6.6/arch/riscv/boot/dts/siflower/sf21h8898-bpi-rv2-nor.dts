/dts-v1/;
#include "sf21h8898-bpi-rv2.dtsi"

/ {
	model = "BananaPi BPI-RV2 (Booting from NOR)";
	compatible = "bananapi,bpi-rv2-nor", "siflower,sf21h8898";

	chosen {
		stdout-path = "serial1:115200n8";
		rootdisk = <&rootdisk>;
	};
};

&spi0 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <&gpio 5 GPIO_ACTIVE_LOW>, <&gpio 36 GPIO_ACTIVE_LOW>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <35000000>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "bootloader";
				reg = <0x0 0x90000>;
				read-only;
			};

			factory: partition@90000 {
				label = "factory";
				reg = <0x90000 0x10000>;
			};

			rootdisk: partition@a0000 {
				label = "firmware";
				reg = <0xa0000 0xf60000>;
				compatible = "denx,fit";
			};
		};
	};

	flash@1 {
		compatible = "spi-nand";
		reg = <1>;
		spi-max-frequency = <35000000>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;
		#address-cells = <1>;
		#size-cells = <1>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "fbl-nand";
				reg = <0x0 0x20000>;
			};

			partition@20000 {
				label = "ubi-nand";
				reg = <0x20000 0x0>;
			};
		};
	};
};

#include "sf21a6826-factory.dtsi"
